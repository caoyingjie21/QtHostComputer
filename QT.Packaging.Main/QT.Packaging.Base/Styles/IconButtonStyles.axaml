<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- 3D图标按钮样式 -->
  <Style Selector="Button.IconButton3D">
    <Setter Property="Width" Value="40"/>
    <Setter Property="Height" Value="40"/>
    <Setter Property="CornerRadius" Value="20"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#FFFFFF"/>
          <GradientStop Offset="0.5" Color="#F0F0F0"/>
          <GradientStop Offset="1" Color="#E0E0E0"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowDirectionEffect BlurRadius="3" ShadowDepth="2" Direction="315" Color="#40000000" Opacity="0.3"/>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- 悬停状态 -->
  <Style Selector="Button.IconButton3D:pointerover">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#FFFFFF"/>
          <GradientStop Offset="0.5" Color="#F8F8FF"/>
          <GradientStop Offset="1" Color="#F0F0F8"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowDirectionEffect BlurRadius="4" ShadowDepth="3" Direction="315" Color="#60000000" Opacity="0.4"/>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- 按下状态 -->
  <Style Selector="Button.IconButton3D:pressed">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#E0E0E0"/>
          <GradientStop Offset="0.5" Color="#F0F0F0"/>
          <GradientStop Offset="1" Color="#FFFFFF"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowDirectionEffect BlurRadius="1" ShadowDepth="1" Direction="135" Color="#30000000" Opacity="0.5"/>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- 危险按钮样式 -->
  <Style Selector="Button.IconButton3D.Danger">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#C62828"/>
          <GradientStop Offset="0.5" Color="#D32F2F"/>
          <GradientStop Offset="1" Color="#E53935"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="Button.IconButton3D.Danger:pointerover">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#D32F2F"/>
          <GradientStop Offset="0.5" Color="#E53935"/>
          <GradientStop Offset="1" Color="#EF5350"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="Button.IconButton3D.Danger:pressed">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#B71C1C"/>
          <GradientStop Offset="0.5" Color="#C62828"/>
          <GradientStop Offset="1" Color="#D32F2F"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- 暗黑主题样式 - 使用单独的样式类 -->
  <Style Selector="Button.IconButton3D.DarkTheme">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#202020"/>
          <GradientStop Offset="0.5" Color="#181818"/>
          <GradientStop Offset="1" Color="#101010"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="Button.IconButton3D.DarkTheme:pointerover">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#404040"/>
          <GradientStop Offset="0.5" Color="#303030"/>
          <GradientStop Offset="1" Color="#202020"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="Button.IconButton3D.DarkTheme:pressed">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#101010"/>
          <GradientStop Offset="0.5" Color="#202020"/>
          <GradientStop Offset="1" Color="#303030"/>
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
  </Style>

</Styles>
