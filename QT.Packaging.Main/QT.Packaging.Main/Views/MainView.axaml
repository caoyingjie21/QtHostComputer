<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:QT.Packaging.Main.ViewModels"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="QT.Packaging.Main.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    <!-- 主题切换按钮 - 右上角 -->
    <Button Name="ThemeToggleButton"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="20"
            Width="40"
            Height="40"
            CornerRadius="20"
            BorderThickness="2"
            BorderBrush="{DynamicResource SukiControlBorderBrush}"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Padding="0"
            ToolTip.Tip="切换主题"
            Click="ThemeToggleButton_Click">
      

      
      <!-- 图标容器，确保居中 -->
      <Grid>
        <materialIcons:MaterialIcon Name="ThemeIcon"
                                    Kind="WbSunny"
                                    Width="24" 
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource SukiText}" />
      </Grid>
    </Button>

    <!-- 扫码输入框和操作按钮区域 -->
    <StackPanel Grid.Row="0" 
                Orientation="Horizontal" 
                VerticalAlignment="Top"
                Margin="20,20,80,0"
                Spacing="10">
      
      <!-- 扫码输入框 -->
      <TextBox Name="ScannerInputBox"
               Width="200"
               Height="32"
               Watermark="请扫描或输入条码"
               CornerRadius="6"/>
      
      <!-- 确认按钮 -->
      <Button Name="ConfirmButton"
              Width="80"
              Height="32"
              CornerRadius="6"
              Content="确认"
              ToolTip.Tip="确认输入内容"/>
      
      <!-- 载入机器按钮 -->
      <Button Name="LoadMachineButton"
              Width="100"
              Height="32"
              CornerRadius="6"
              Content="载入机器"
              ToolTip.Tip="载入机器配置"/>
      
      <!-- 保存配置按钮 -->
      <Button Name="SaveConfigButton"
              Width="100"
              Height="32"
              CornerRadius="6"
              Content="保存配置"
              ToolTip.Tip="保存当前配置"/>
      
    </StackPanel>
    
    <!-- 主要内容区域 -->
    <ContentPresenter Grid.Row="1" />
  </Grid>
</UserControl>
